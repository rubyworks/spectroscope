#!/usr/bin/env ruby

Test.run :default do |run|
  run.files << 'spec/*_spec.rb'

  require 'ae/should'
  require 'spectra'
end

Test.run(:cov) do |run|
  run.files << 'spec/*_spec.rb'

  require 'simplecov'

  SimpleCov.start do
    require 'ae/should'
    require 'spectra'

    coverage_dir 'log/coverage'
  end
end

